services:
  squid:
    container_name: squid    
    image: ubuntu/squid:latest
    hostname: docker_squid
    network_mode: bridge
    network: docker-net
    ports:
      - 3128:3128
    volumes:
      - ./squid-data:/var/spool/squid
      - ./squid-logs:/var/log/squid
    environment:
      TZ: Europe/Berlin
    restart: unless-stopped
